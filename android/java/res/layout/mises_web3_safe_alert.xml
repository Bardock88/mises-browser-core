<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chrome="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="335dp"
        android:layout_height="520dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="30dp"
        android:background="@drawable/mises_share_bg">

        <View
            android:layout_height="15dp"
            android:layout_width="match_parent" />
        <ImageView
            android:id="@+id/iv_promote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/web3_safe_prompt"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="@string/web3_safe_alert_title"
            android:textColor="#f03e3e"
            android:textStyle="bold"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:textSize="17sp"
            android:gravity="start|top"
            android:singleLine="false"
            android:lineSpacingExtra="6dp"
            android:maxLength="300"/>

        <Button
		    chrome:backgroundTint="@null"
		    android:id="@+id/btn_block"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/mises_web3_safe_confirm_bg"
            android:text="@string/web3_safe_block"
            android:textAllCaps="false"
            android:textColor="#ffffffff"
            android:textSize="17sp" />

        <View
            android:layout_height="15dp"
            android:layout_width="match_parent" />

        <Button
	        chrome:backgroundTint="@null"
            android:id="@+id/btn_ignore"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/mises_share_cancel_bg"
            android:text="@string/web3_safe_btn_ignore"
            android:textAllCaps="false"
            android:textColor="#ff666666"
            android:visibility="gone"
            android:textSize="17sp" />

        <CheckBox
            android:text="@string/web3_safe_ignor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mises_share_bg"
            android:id="@+id/checkbox_ignore"
            android:textAllCaps="false"
            android:textColor="#ff666666"
            android:textSize="17sp"
            />


        <View
            android:layout_height="15dp"
            android:layout_width="match_parent" />


        <LinearLayout
            android:id="@+id/layout_blockem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
        >
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#ff999999"
                android:text="@string/web3_safe_blockem_start"
                android:textAlignment="center"
                android:textSize="12sp" />
            <View
                android:layout_height="match_parent"
                android:layout_width="5dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/web3_safe_blockem"
                android:contentDescription="@null"/>
            <View
                android:layout_height="match_parent"
                android:layout_width="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:singleLine="true"
                android:textColor="#ff999999"
                android:text="@string/web3_safe_blockem_end"
                android:textAlignment="center"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
